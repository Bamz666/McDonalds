<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SahurActivity"
    android:orientation="vertical"
    android:background="@drawable/sahur">

    <ImageView
        android:id="@+id/kembali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="18dp"
        app:srcCompat="?attr/actionModeCloseDrawable"/>


    <LinearLayout
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="63dp">

        <TextView
            android:id="@+id/male"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:text="Male"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            android:paddingTop="7dp"
            android:textAlignment="center"
            android:background="@drawable/rounded_gender"/>

        <TextView
            android:id="@+id/female"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:text="Female"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            android:paddingTop="7dp"
            android:textAlignment="center"
            android:background="@drawable/rounded_gender"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_marginLeft="63dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_dropdown"
        android:hint="Choose your nickname"
        android:paddingLeft="13dp"
        android:paddingTop="10dp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="-32dp"
        android:layout_marginLeft="310dp"
        android:background="@android:drawable/ic_media_play"
        android:rotation="-30"
        android:backgroundTint="@color/black"
        android:dropDownWidth="200dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="270dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="63dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:textSize="19sp"
        android:textAlignment="center"
        android:text="Lanjut"
        android:background="@drawable/rounded_lanjut"/>

</LinearLayout>